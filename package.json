{
  "name": "@proofofme/sdk",
  "version": "0.1.0",
  "description": "ProofOfMe SDK for Decentralized Identity Management",
  "main": "./dist/apis/index.js",
  "module": "./dist/apis/index.mjs",
  "types": "./dist/apis/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/apis/index.d.ts",
      "import": "./dist/apis/index.mjs",
      "require": "./dist/apis/index.js"
    },
    "./contracts": {
      "types": "./dist/contracts/index.d.ts",
      "import": "./dist/contracts/index.mjs",
      "require": "./dist/contracts/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsup",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test && yarn lint",
    "lint": "eslint .",
    "test": "jest"
  },
  "keywords": [
    "did",
    "identity",
    "blockchain",
    "ethereum",
    "web3"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
